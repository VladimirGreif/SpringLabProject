<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="ca.springmvc.application.utils.Persone" table="employe">
      <meta attribute="class-description">
         This class contains the employee detail. 
      </meta>
      <id name="personeNumber" type="string" column="EMPN">
         <generator class="assigned"/>
         <!-- "native" -->
         
      </id>
      <property name="personeName" column="ENAME" type="string"/>
      <property name="personeJob" column="EJOB" type="string"/>
      <property name="personeManagerNumber" column="MGR" type="string"/>
      <property name="personeDepartmentNumber" column="DEPN" type="string"/>
   </class>
</hibernate-mapping>